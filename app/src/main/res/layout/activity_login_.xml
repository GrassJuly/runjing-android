<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:scrollbars="none">
    <!--登录界面UI-->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/act_iv_head"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_100"
            android:scaleType="centerCrop"
            android:src="@mipmap/app_logo" />


        <RelativeLayout
            android:id="@+id/act_rl_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_69">

            <ImageView
                android:id="@+id/act_iv_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_user" />

            <EditText
                android:id="@+id/act_et_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/act_iv_phone"
                android:background="@null"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="@string/act_login_phone"
                android:inputType="phone"
                android:maxLength="11"
                android:padding="@dimen/dp_10"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="23dp"
                android:background="@color/color_eeeeee" />
        </RelativeLayout>
        <!--手机号-->

        <RelativeLayout
            android:id="@+id/act_rl_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_50"
            android:layout_marginRight="@dimen/dp_50"
            android:layout_marginTop="@dimen/dp_16.5">

            <ImageView
                android:id="@+id/act_iv_pwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/login_password" />

            <EditText
                android:id="@+id/act_et_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/act_iv_pwd"
                android:background="@null"
                android:digits="0123456789abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:enabled="true"
                android:gravity="center_vertical"
                android:hint="@string/act_login_pwd"
                android:inputType="textPassword"
                android:maxLength="20"
                android:padding="@dimen/dp_10"
                android:selectAllOnFocus="true"
                android:singleLine="true"
                android:textColor="@color/color_333333"
                android:textColorHint="@color/color_999999"
                android:textSize="@dimen/sp_14" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="23dp"
                android:background="@color/color_eeeeee" />
            <!--密码-->
        </RelativeLayout>

        <Button
            android:id="@+id/act_btn_login"
            android:layout_width="@dimen/dp_290"
            android:layout_height="@dimen/dp_40"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_40"
            android:background="@drawable/selector_btn_click_bg"
            android:gravity="center"
            android:text="@string/act_login_submit"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_17" />
        <!--登录-->
        <TextView
            android:id="@+id/tv_forget_pwd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:gravity="right"
            android:text="忘记密码"
            android:textColor="@color/color_ff4500"
            android:textSize="@dimen/dp_15" />

        <TextView
            android:id="@+id/act_tv_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="@dimen/dp_38"
            android:layout_marginTop="110dp"
            android:text="v1.0"
            android:textColor="@color/color_translucent"
            android:textSize="@dimen/sp_12" />

    </LinearLayout>
</ScrollView>
