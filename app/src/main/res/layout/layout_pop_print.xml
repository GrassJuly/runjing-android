<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/ll_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_pop_middle_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_print_title"
            android:layout_width="fill_parent"
            android:layout_height="43dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_top_bg"
            android:gravity="center"
            android:text="@string/app_default"
            android:textColor="@color/color_3d4245"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_print_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="@dimen/dp_8"
            android:layout_marginTop="@dimen/dp_20"
            android:gravity="left"
            android:text="@string/app_default"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_15" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp">
            <ImageView
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_print"
                android:id="@+id/img_icon_print"
                />
            <TextView
                android:id="@+id/tv_print_msg1"
                android:layout_toRightOf="@+id/img_icon_print"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="13dp"
                android:gravity="left"
                android:text="@string/app_default"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/tv_print_msg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="@dimen/dp_6"
                android:layout_below="@+id/tv_print_msg1"
                android:layout_toRightOf="@+id/img_icon_print"
                android:gravity="left"
                android:text="@string/app_default"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp_14" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lay_ll_choose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/lay_iv_choose_print"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/reject_shape" />

            <TextView
                style="@style/et_type1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_3"
                android:text="@string/app_print"
                android:textSize="@dimen/sp_14"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/iv_line"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="20dp"
            android:background="@color/popupwindow_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_print_neg"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/selector_pop_middle"
                android:gravity="center"
                android:text="@string/dialog_left_botton"
                android:textColor="@color/color_333333"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/img_line"
                android:layout_width="0.5dp"
                android:layout_height="43dp"
                android:background="@color/popupwindow_line" />

            <Button
                android:id="@+id/btn_print_pos"
                android:layout_width="wrap_content"
                android:layout_height="43dp"
                android:layout_weight="1"
                android:background="@drawable/selector_pop_middle"
                android:gravity="center"
                android:text="确定"
                android:textColor="@color/color_ff3300"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>