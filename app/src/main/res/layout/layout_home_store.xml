<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_ffffff"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_196"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lay_ll_order"
            android:layout_width="@dimen/dp_150"
            android:layout_height="match_parent"
            android:background="@mipmap/bg_violet"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:padding="@dimen/dp_10">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_14"
                android:gravity="center_vertical"
                android:text="@string/home_quick_order"
                android:textColor="@color/color_ff333333"
                android:textSize="@dimen/sp_15"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:gravity="center_vertical"
                android:text="@string/home_zt"
                android:textColor="@color/color_ff333333"
                android:textSize="@dimen/sp_13" />

            <ImageView
                android:layout_width="@dimen/dp_106"
                android:layout_height="@dimen/dp_98"
                android:layout_marginLeft="@dimen/dp_35"
                android:layout_marginTop="@dimen/dp_28"
                android:scaleType="fitCenter"
                android:src="@mipmap/medel_order" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lay_ll_store"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/bg_pink"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_95"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:gravity="center_vertical"
                        android:text="@string/home_nextstore"
                        android:textColor="@color/color_ff333333"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/model_ordermsg" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/dp_6"
                    android:src="@mipmap/model_store" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lay_ll_coin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:background="@mipmap/bg_pink"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_95"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_14"
                        android:gravity="center_vertical"
                        android:text="@string/home_coin"
                        android:textColor="@color/color_ff333333"
                        android:textSize="@dimen/sp_15"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_6"
                        android:gravity="center_vertical"
                        android:text="@string/home_one_one"
                        android:textColor="@color/color_ff333333"
                        android:textSize="@dimen/sp_13" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_21"
                    android:scaleType="centerCrop"
                    android:layout_marginRight="@dimen/dp_6"
                    android:src="@mipmap/icon_coin" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
