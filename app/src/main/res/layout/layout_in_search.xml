<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frag_ll_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lay_ll_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_efeff4"
        android:paddingBottom="@dimen/dp_8"
        android:paddingLeft="@dimen/dp_12"
        android:paddingRight="@dimen/dp_12"
        android:paddingTop="@dimen/dp_8">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@mipmap/main_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_10"
                android:scaleType="centerInside"
                android:src="@mipmap/main_search" />

            <EditText
                android:id="@+id/frag_et_search"
                style="@style/et_type1"
                android:layout_width="@dimen/dp_0"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/dp_10"
                android:layout_weight="1"
                android:hint="@string/main_supplier_search"
                android:imeOptions="actionSearch"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/frag_rv_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_e6ffffff"
            android:maxHeight="@dimen/dp_300"
            android:minHeight="@dimen/dp_160"
            android:scrollbars="none" />

        <ImageView
            android:id="@+id/frag_iv_state"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center"
            android:src="@mipmap/no_icon"
            android:visibility="gone" />
    </FrameLayout>

    <View
        android:id="@+id/frag_v_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_66000000"
        android:clickable="false" />

</LinearLayout>
