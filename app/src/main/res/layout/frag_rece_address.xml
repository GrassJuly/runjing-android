<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/color_f1f1f1"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">

        <TextView

            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/string_rece_man"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"/>

        <EditText
            android:id="@+id/edit_rece_man"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_10"
            android:background="@null"
            android:hint="输入联系人"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:singleLine="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_0.5"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView

            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/string_rece_phone"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"/>


        <EditText
            android:id="@+id/edit_rece_phone"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:inputType="phone"
            android:hint="输入联系电话"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@null"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:singleLine="true"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_0.5"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView

            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/string_rece_address"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_gravity="center"
            android:background="@mipmap/icon_location"
            />

        <TextView
            android:id="@+id/tv_rece_select_add"
            android:layout_marginLeft="@dimen/dp_5"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
           android:gravity="center|left"
            android:text="请选择地址"
            android:layout_weight="1"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"/>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:background="@mipmap/right_24px"
            android:layout_marginRight="@dimen/dp_10"
            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_0.5"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView

            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/string_rece_info"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"/>

        <EditText
            android:id="@+id/edit_rece_mpnum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginRight="@dimen/dp_10"
            android:inputType="phone"
            android:hint="详细地址(门牌号等)"
            android:layout_marginLeft="@dimen/dp_8"
            android:background="@null"
            android:textColor="@color/color_999999"
            android:textSize="@dimen/sp_12"
            android:layout_gravity="center"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginTop="@dimen/dp_0.5"
        android:background="@color/color_ffffff"
        android:orientation="horizontal">
        <TextView

            android:layout_width="@dimen/dp_60"
            android:layout_height="wrap_content"
            android:text="@string/string_rece_mark"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/color_666666"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/dp_10"/>

        <Button
            android:id="@+id/btn_style_home"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_10"
            android:text="家" />

        <Button
            android:id="@+id/btn_style_company"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_35"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_gravity="center"
            android:textSize="@dimen/sp_10"
            android:text="公司" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_define"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp_20"
        android:background="@drawable/style_radius_bg_ffa700"
        android:textColor="@color/color_ffffff"
        android:text="确定" />


</LinearLayout>
