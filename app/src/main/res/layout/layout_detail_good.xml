<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/common_transparent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dp_10"
    android:paddingTop="@dimen/dp_10"
    android:paddingRight="@dimen/dp_10">

    <LinearLayout
        android:id="@+id/lay_ll_order_detail"
        android:layout_width="@dimen/dp_174"
        android:layout_height="wrap_content"
        android:background="@drawable/style_radius_bg_ffffff"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dp_10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_21">

            <ImageView
                android:id="@+id/lay_iv_good"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_133.5"
                android:scaleType="centerCrop"
                android:src="@mipmap/iv_default" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lay_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_default"
                android:textColor="@color/color_ff333333"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/lay_tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_3"
                android:textColor="@color/color_ff333333"
                android:textSize="@dimen/sp_12"
                android:textStyle="bold"
                android:visibility="gone" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/lay_rv_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:id="@+id/lay_tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/app_default"
                    android:textColor="@color/color_F80000"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/lay_tv_favorablePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/lay_tv_price"
                    android:layout_alignParentLeft="true"
                    android:gravity="right"
                    android:text="@string/app_default"
                    android:textColor="@color/color_666666"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/lay_iv_add"
                    android:layout_width="@dimen/dp_17"
                    android:layout_height="@dimen/dp_17"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@id/lay_tv_price"
                    android:scaleType="centerInside"
                    android:src="@mipmap/icon_add" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/lay_ll_plus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/lay_tv_Plus_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:text="@string/app_default"
                    android:textColor="@color/color_F80000"
                    android:textSize="@dimen/sp_12"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/icon_plus" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>