<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/layout_aty_activity"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_30"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_activity_wenzi"
            android:layout_width="@dimen/dp_28"
            android:layout_height="@dimen/dp_14"
            android:layout_marginLeft="@dimen/dp_13"
            android:gravity="center"
            android:text="滿減"
            android:textColor="@color/color_F80000"
            android:textSize="@dimen/sp_11" />

        <TextView
            android:id="@+id/txt_activity_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_9"
            android:layout_weight="1"
            android:text="满100元减10元 还差5.99元"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp_12" />

        <LinearLayout
            android:id="@+id/layout_aty_choose"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="继续选购"
                android:textColor="@color/color_F80000"
                android:textSize="@dimen/sp_12" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_8"
                android:layout_marginRight="@dimen/dp_10"
                android:src="@mipmap/icon_right_jiao_red"
              />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dp_88"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_gravity="center"
            android:src="@mipmap/icon_choose_h"
            />

        <ImageView
            android:id="@+id/img_goods_detail"
            android:layout_width="@dimen/dp_88"
            android:layout_height="@dimen/dp_88"
            android:layout_marginLeft="@dimen/dp_8"
            android:layout_gravity="center"
            android:src="@mipmap/app_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:orientation="vertical">


            <TextView
                android:id="@+id/txt_all_cart_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_13"
                android:textColor="@color/color_333333"
                android:layout_marginRight="@dimen/sp_17"
                android:text="五粮液酿神股份有限公司出品佳品浓
香型白酒500ml" />
            <TextView
                android:id="@+id/txt_all_cart_detail_gg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_6"
                android:textSize="@dimen/sp_10"
                android:textColor="@color/color_999999"
                android:layout_marginRight="@dimen/sp_17"
                android:text="规格：750ml" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_F80000"
                    android:textSize="@dimen/sp_12"
                    android:layout_gravity="center"
                    android:text="¥259.00" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_12"
                    android:textColor="@color/color_666666"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_6"
                    android:text="×1" />



            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


</LinearLayout>
