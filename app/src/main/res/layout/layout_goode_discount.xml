<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_30"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lay_tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:text="@string/string_seckill"
        android:background="@drawable/style_bg_fff80000"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_FFF80000"
        android:gravity="center"/>

    <TextView
        android:id="@+id/lay_tv_tagVal"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_16"
        android:text="@string/string_seckill"
        android:textSize="@dimen/sp_11"
        android:textColor="@color/color_FF333333"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_marginLeft="@dimen/dp_5"
        android:layout_weight="1"
        android:gravity="center_vertical"/>

    <ImageView
        android:id="@+id/lay_iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/right_24px"
        android:visibility="gone"/>

</LinearLayout>
