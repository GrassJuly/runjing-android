<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/common_transparent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/frag_iv_back"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_marginLeft="@dimen/dp_12"
        android:src="@mipmap/icon_back_c" />

    <LinearLayout
        android:id="@+id/lay_ll_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/dp_60"
        android:paddingRight="@dimen/dp_60"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="invisible">

        <RelativeLayout
            android:id="@+id/lay_rl_good"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/lay_tv_good"
                android:layout_width="@dimen/dp_40"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:text="@string/good_name"
                android:textColor="@color/color_F80000"
                android:textSize="14sp" />

            <View
                android:id="@+id/lay_iv_good"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_F80000" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lay_rl_detail"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lay_tv_detail"
                android:layout_width="@dimen/dp_40"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/good_detail"
                android:textColor="@color/color_ff333333"
                android:textSize="14sp" />

            <View
                android:id="@+id/lay_v_detail"
                android:layout_width="@dimen/dp_45"
                android:layout_height="@dimen/dp_2"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/color_F80000"
                android:visibility="gone"/>
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/lay_iv_share"
        android:layout_width="@dimen/dp_27"
        android:layout_height="@dimen/dp_27"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/dp_12"
        android:src="@mipmap/icon_share_l" />
</LinearLayout>

